<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="300dp"
              android:layout_centerHorizontal="true"
              android:clipChildren="false"
    >

    <ImageView
        android:id="@+id/item_media_previous"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@android:drawable/ic_media_previous"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/item_media_play"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/play_or_pause"
        android:layout_weight="2"
        />


    <ImageView
        android:id="@+id/item_media_next"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@android:drawable/ic_media_next"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/item_media_rew"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@android:drawable/ic_media_rew"
        android:layout_weight="1"
        />

    <SeekBar
        android:id="@+id/item_media_seekbar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        />

    <ImageView
        android:id="@+id/item_media_ff"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@android:drawable/ic_media_ff"
        android:layout_weight="1"
        />
</LinearLayout>
